        !function ($) {

            "use strict"

            /* DROPDOWN CLASS DEFINITION
            * ========================= */

            var toggle = '[data-toggle="dropdown"]'
    , Dropdown = function (element) {
        $(element).bind('click', this.toggle)
    }

            Dropdown.prototype = {

