
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")"  rel="stylesheet"
        type="text/css" />
    
    <style type="text/css">
        html, body
        {
            background: #eee;
            margin-top: 20px;
        }
        body
        {
            
        }
        input[type="text"], input[type="number"], select
        {
           
        }
        .content
        {
            background-color: #fff;
            padding: 20px;
            margin: 0 -20px;
            min-height: 500px;
            -webkit-border-radius: 0 0 5px 5px;
            -moz-border-radius: 0 0 5px 5px;
            border-radius: 0 0 5px 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.15);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.15);
            box-shadow: 0 1px 2px rgba(0,0,0,.15);
        }
      
        
        .container > footer
        {
            color: #777;
            margin: 0;
            border-top: 0px;
            padding-bottom: 10px;
        }
        /* Styles for validation helpers
-----------------------------------------------------------*/
        .field-validation-error
        {
            color: #ff0000;
        }
        
        .field-validation-valid
        {
            display: none;
        }
        
        .input-validation-error
        {
            border: 1px solid #ff0000;
            background-color: #ffeeee;
        }
        
        .validation-summary-errors
        {
            font-weight: bold;
            color: #ff0000;
        }
        
        .validation-summary-valid
        {
            display: none;
        }
        footer {
            margin-top: 17px;
            padding-top: 17px;
            border-top: 1px solid #EEE;
        }
    </style>
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.min.js" type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js"
        type="text/javascript"></script>
         <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="brand" href="/">Media Swap</a>
        <ul class="nav">
         
                   
                    <li><a href="@Url.Action("Index", "Item")">My Media</a> </li>
                    <li><a href="@Url.Action("Index","Queue")">My Queue</a></li>
                    <li><a href="@Url.Action("Index", "Search")">Search Media</a></li>
        </ul>
        <ul class="nav pull-right">
                  @if (!HttpContext.Current.User.Identity.IsAuthenticated)
                  {
                  <li>@Html.ActionLink("Login", "Login", "Profile")</li>
                  }
                  else
                  {
                     <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown" style="background-image:url(@GravatarHelper.GravatarImageString(MediaSwap.Web.Models.MediaSwapIdentity.Current.EmailAddress,40,"")); background-repeat:no-repeat"> <span style="display:inline-block; margin-left:40px">   @MediaSwap.Web.Models.MediaSwapIdentity.Current.FriendlyName</span><span class="caret"></span></a>  <ul class="dropdown-menu">
      <li>@Html.ActionLink("View Profile","Index","Profile")</li>
    
      <li class="divider"></li>
      <li>@Html.ActionLink("Logout","Logout","Profile")</li>
    </ul></li>
                  }
                 
                </ul>
                </div>
    </div><!-- /navbar-inner -->
  </div><!-- /navbar -->

    <div class="container">
        <div class="content">
          @MvcMiniProfiler.MiniProfiler.RenderIncludes()
            @RenderBody()
        </div>
        <footer>
      <p>
        Made in a Hackathon.
      </p>
    </footer>
    </div>
