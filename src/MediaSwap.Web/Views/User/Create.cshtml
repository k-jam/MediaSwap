@model MediaSwap.Core.Models.User
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
<div class="form-stacked">


    @Html.LabelFor(m => m.UserName)
    @Html.TextBoxFor(m => m.UserName)
    @Html.ValidationMessageFor(m => m.UserName)
    @Html.LabelFor(m => m.FirstName)
    @Html.TextBoxFor(m => m.FirstName)
    @Html.ValidationMessageFor(m => m.FirstName)
    @Html.LabelFor(m => m.LastName)
    @Html.TextBoxFor(m => m.LastName)
    @Html.ValidationMessageFor(m => m.LastName)
    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email)
    @Html.ValidationMessageFor(m => m.Email)
    @Html.LabelFor(m => m.GeoLocation)
    @Html.TextBoxFor(m => m.GeoLocation)
    @Html.ValidationMessageFor(m => m.GeoLocation)
    <div class="actions">
        <input type="submit" value ="Create Profile" id="btnCreates" class="btn primary" />
    </div>
</div>

}

<script type="text/javascript">
    $(function () {
        $("#btnCreate").click(function () {
     
            if ($("#frmCreate").validate().form()== true) {
                $.ajax({
                    type: 'POST',
                    url: "/User/Create",
                    data: $("#frmCreate").serialize(),
                    success: function (data) {


                    }
                });
            }
        });
    });



</script>