@model MediaSwap.Web.ViewModels.UserItemEditViewModel
@{
    ViewBag.Title = "UserItems";
}

<h2>My Stuff</h2>


@using(Html.BeginForm())
{
  
 
    <table>


    <thead>
    
    <tr>
        <th>Own</th>
        <th>Description</th>
        <th>Format</th>
    </tr>
    </thead>
    <tbody>
    
      @foreach (var item in Model.Items)
      {
       <tr>
          <td>
           @{
                var chk = @item.Owned ? "checked" : "";   
            }
           <input type="checkbox" name="owned" @chk value="@item.Item.ItemId" />
            
          </td>
          <td>
           @item.Item.ItemName
          
          </td>
          <td>@item.Item.ItemType.Format.FormatTypeName</td>
     </tr>
     
    }                                                                            
    </tbody>   
  </table>
  <input type="submit" />
}
