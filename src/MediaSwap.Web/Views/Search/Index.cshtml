@model MediaSwap.Web.ViewModels.SearchItemViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("", "", FormMethod.Post, new { @class = "search-form" }))
{
   

   
    @Html.TextBox("search", "", new { @placeholder="by name" })
    <input type="submit" value="Search" class="btn primary" />
}  

<table class="">
    <tr>
        <th>
          Name
        </th>
        <th>Format</th>
        <th></th>
    </tr>
    @if(@Model.ItemResults != null)
    {
        foreach (var item in Model.ItemResults)
        {
        <tr>
            <td>
                 @Html.Label(item.ItemName.ToString())
            </td>
            <td>
               @Html.Label(item.ItemType.Format.FormatTypeName)
            </td>
            <td>
                @Ajax.ActionLink("Add To Queue", "AddItem", "Queue", new { ItemId = item.ItemId }, new AjaxOptions() { OnComplete="AddItemComplete", OnFailure = "AddItemFailed", OnSuccess = "AddItemSuccess" }, new { })
            </td>
        </tr>
        }
    }
</table>


<script type="text/javascript">
    function AddItemComplete(xmlHttp) {
        if (xmlHttp.status == 401) {
            window.location = "/User/Login";
        }
    }

    function AddItemSuccess(result, textStatus, jqXHR) {

        
    }
    function AddItemFailed(result, textStatus, jqXHR)
     {

        
     }

     $(function () {

         $.ajax({
             statusCode: {
                 404: function () {
                     alert('page not found');
                 }
                 ,
                 401: function () {
                     alert('not authorized');
                 }
             }
         });

     }
     );
</script>