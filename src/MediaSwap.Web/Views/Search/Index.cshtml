@model MediaSwap.Web.ViewModels.SearchItemViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()){
   
<div>
    @Html.Label("Enter Search") 
    @Html.TextBox("search")
    <input type="submit" value="Search" class="btn primary" />
  
</div>
<table>
    <tr>
        <th>
          Name
        </th>
        <th>Format</th>
        <th></th>
    </tr>
    @if(@Model.ItemResults != null)
    {
        foreach (var item in Model.ItemResults)
        {
        <tr>
            <td>
                 @Html.Label(item.ItemName.ToString())
            </td>
            <td>
               @Html.Label(item.ItemType.Format.FormatTypeName)
            </td>
            <td>
             @using (Ajax.BeginForm("AddItem", "Queue", new {itemId=item.ItemId }, new AjaxOptions() { OnFailure = "AddItemFailed()" }))
             {
                
                 <input type="button" value = "Add To Queue" class="btn" />
             }
            </td>
        </tr>
        }
    }
</table>
}

<script type="text/javascript">
    function AddItemFailed()
     {

         alert("I failed");
    }
</script>