@model IEnumerable<MediaSwap.Core.Models.Item>

@{
    ViewBag.Title = "Items";
}

<h2>Items</h2>

<p>
    @Html.ActionLink("Create New", "AddItem")
</p>
<table>
    <tr>
        <th>
            Item Name
        </th>
        <th>
            Amazon Id
        </th>
        <th>
            Media Id
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ItemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmazonId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MediaId)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditItem", new { id=item.ItemId }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.ItemId }) |*@
            @Html.ActionLink("Delete", "DeleteItem", new { id=item.ItemId })
        </td>
    </tr>
}

</table>
